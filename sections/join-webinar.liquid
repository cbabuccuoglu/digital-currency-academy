<!-- Join Webinar Section -->
<style>
  .expert-button {
    max-width: 400px;
  }
  .expert-button a {
    color: black;
  }
  .online-chat-button a {
    color: white;
  }
  .online-chat-button a:hover {
    color: #F7B862;
  }
  .attendees {
    background-color: #F5F5F5;
    font-style: italic;
  }
  @media screen and (min-width: 768px) {
    .thumb-container {
      padding-left: 3rem !important;
    }
  }

</style>

<section class="book-expert my-5">
  <div class="container">
    <div class="row border rounded shadow">
      <div class="col-xl-4 col-12 p-0">
        <img src="{{ section.settings.image | img_url: '700x700' }}" alt="" class="img-responsive w-100">
      </div>
      <div class="col-12 col-xl-8 d-flex flex-column justify-content-between px-0 overflow-hidden">
        <h1 class="section-title pt-5 px-5">{{ section.settings.section_title }}</h1>
        <p class="section-text fs-3 px-5">
          {{ section.settings.section_text }}
        </p>
        <button class="cta-link btn btn-primary mx-5 mb-3 expert-button"><a href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a></button>
        <div class="attendees p-3 row border-top gap-sm-3 gap-md-0">
                  <div class="w-auto thumb-container">
                    <span class="thumbnail"><img src="{{ 'thumb-1.png' | asset_img_url: '50x50' }}" alt="thumb" class="rounded-circle"></span>
                    <span class="thumbnail"><img src="{{ 'thumb-2.png' | asset_img_url: '50x50' }}" alt="thumb" class="rounded-circle"></span>
                    <span class="thumbnail"><img src="{{ 'thumb-3.png' | asset_img_url: '50x50' }}" alt="thumb" class="rounded-circle"></span>
                  </div>
                    <div class="attendees-count-container w-auto my-auto">
                      45 people are attending this event
                    </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Join Webinar Section End -->



