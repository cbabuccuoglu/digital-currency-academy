  "id": "expert_img_1",
  "label": "Expert Image 1"
},
{
  "type": "image_picker",
  "id": "expert_img_2",
  "label": "Expert Image 2"
},
{
  "type": "image_picker",
  "id": "expert_img_3",
  "label": "Expert Image 3"
