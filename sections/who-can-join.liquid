<section class="who-can-join py-4">
  <div class="rich-text container">
    <div class="grid">
      <div class="grid__item {% unless section.settings.full_width %} medium-up--two-thirds medium-up--push-one-sixth{% endunless %}">
        {% if section.settings.section_title != blank %}
          <div class="rich-text__heading--{{ section.settings.text_size }} text-center">
            <h2 class="h3">{{ section.settings.section_title | escape }}</h2>
          </div>
        {% endif %}
        {% if section.settings.text != blank %}
          <div class="rich-text__text--{{ section.settings.text_size }} rte-setting text-center pb-4">{{ section.settings.text }}</div>
        {% else %}
          <div class="pb-4"></div>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row text-center justify-content-between">
    {% for block in section.blocks %}
      <div class="col-md-3 col-6 pb-3">
        <div class="border border-light py-5 shadow rounded d-flex flex-column justify-content-center align-items-center" style="height: 200px;">
          <p class="brand-text">DC ACADEMY</p>
          <p class="color-primary fw-bold fs-5 px-4">{{ block.settings.box_text }}</p>
        </div>
      </div>
    {% endfor %}
    </div>
    <div class="row text-center py-4">
      <div class="col-12">
        <p>{{ section.settings.bottom_text }}</p>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Who Can Join Section",
  "class": "index-section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Wide Display"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Size",
      "default": "medium",
      "options": [
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Box",
      "settings": [
        {
          "type": "text",
          "id": "box_text",
          "label": "Box Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Who Can Join Section",
      "category": "Text"
    }
  ]
}
{% endschema %}
